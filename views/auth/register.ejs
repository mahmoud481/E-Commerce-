<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="assets/css/fontawesome-all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!--bootstrap-->
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="assets/css/icheck-bootstrap.min.css">
    <!-- custom style -->
    <link rel="stylesheet" href="assets/css/auth.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition login-page auth-background">
    <div class="login-box">
        <div class="login-logo">
            <a href="index.html"><img src="assets/img/logo/logo1.png" alt="logo"></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <%if(generalErrorMessage !== ""){%>
            <div class="alert alert-danger" role="alert"><%= generalErrorMessage %></div>
            <%}%>
            <%if(ismatchErrorMessage !== ""){%>
            <div class="alert alert-danger" role="alert"><%= ismatchErrorMessage %></div>
            <%}%>
                <p class="login-box-msg">Sign in to start your session</p>
                
                
                <form method="post">
                    <%if(userNameErrorMessage !== ""){%>
            <div class="alert alert-danger" role="alert"><%= userNameErrorMessage %></div>
            <%}%>
                    <div class="input-group mb-3">
                        <input type="text" name="name" class="form-control" id="name" value="<%= name %>"
            autocomplete="off">
            <label for="name">Name</label>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-user"></span>
                </div>
            </div>
        </div>
        <%if(emailErrorMessage !== ""){%>
        <div class="alert alert-danger" role="alert"><%= emailErrorMessage %></div>
        <%}%>
        <div class="input-group mb-3">
            <input type="email" name="email" class="form-control" id="email" value="<%= email %>" autocomplete="off">
        <label for="email">Email</label>
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <%if(passwordErrorMessage !== ""){%>
    <div class="alert alert-danger" role="alert"><%= passwordErrorMessage %></div>
    <%}%>
        <div class="input-group mb-3">
            <input type="password" name="password" class="form-control" id="password" value="<%= password %>">
    <label for="password">Password</label>
    <div class="input-group-append">
        <div class="input-group-text">
            <span class="fas fa-lock"></span>
        </div>
    </div>
    </div>
    <%if(passwordConfirmationErrorMessage !== ""){%>
    <div class="alert alert-danger" role="alert"><%= passwordConfirmationErrorMessage %></div>
    <%}%>
        <div class="input-group mb-3">
            <input type="password" name="password_confirmation" class="form-control" id="password_confirmation" value="<%= passwordConfirmation %>">
    <label for="password_confirmation">Confirm Password</label>
    <div class="input-group-append">
        <div class="input-group-text">
            <span class="fas fa-lock"></span>
        </div>
    </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign Up</button>
        </div>
        <!-- /.col -->
    </div>
    </form>

    <div class="hr-container">
        <hr>
        <label>Or</label>
    </div>

    <a href="login.html" class="register">already member? login now <i class="fa fa-arrow-right"></i> </a>



    </div>
    <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    <!-- jQuery 3 -->
    <script src="assets/js/vendor/jquery-1.12.4.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="assets/js/bootstrap.min.js"></script>
    <script>
        $(".input-group input").each(function () {
            if ($(this).val() != "") {
                $(this).addClass('filled');
            } else {
                $(this).removeClass('filled');
            }
        });
        $(".input-group input").change(function () {
            if ($(this).val() != "") {
                $(this).addClass('filled');
            } else {
                $(this).removeClass('filled');
            }
        });
    </script>
</body>

</html>